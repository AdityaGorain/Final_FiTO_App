                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#BC3030" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:columnCount="1"
                android:rowCount="5">

