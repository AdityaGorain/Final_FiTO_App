<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fito">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <uses-feature
        android:name="android.hardware.sensor.stepcounter"
        android:required="true" />
    <uses-feature android:name="android.hardware.SensorManager" />
    <uses-feature android:name="android.hardware.Sensor" />
    <uses-feature android:name="android.hardware.SensorEvent" />
    <uses-feature android:name="android.hardware.SensorEventListener" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BottomNavTrial"
        tools:targetApi="31">
        <activity
            android:name="com.example.fito.ui.Details2Activity"
            android:exported="false" />
        <activity
            android:name="com.example.fito.ui.DetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fito.ui.food.TestActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fito.ui.food.MealActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fito.ui.food.FoodSelectActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fito.MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name="com.example.fito.SignOutActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fito.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fito.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fito.PersonalDetailsActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>